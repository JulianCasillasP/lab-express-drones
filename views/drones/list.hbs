<h2>Available drones</h2>

<div class="drones-container">
  {{#each drones}}
  <div class="drones-item">
    <h3>{{this.name}}</h3>
    <p>Propellers: {{this.propellers}}</p>
    <p>Max Speed: {{this.maxSpeed}} m/s</p>
    <a href="/drones/{{this._id}}/edit">Edit</a><br/>
    <form action="/drones/{{this._id}}/delete" method="POST">
      <button type="submit">Delete</button>
    </form>
  </div>
  {{/each}}
</div>